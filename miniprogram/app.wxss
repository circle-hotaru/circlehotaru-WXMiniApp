/**app.wxss**/
@import "./style/weui.wxss";

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: #ff8040;
  color: white;
  box-shadow: 0 2px 7px -1px rgba(0, 0, 0, .4);
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f2f2f2;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  font-size: 14px;
  color: #3f3f3f;
}