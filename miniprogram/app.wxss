/**app.wxss**/
@import "./style/weui.wxss";

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: #58e2c2;
  color: white;
  box-shadow: 2px 2px 1px 1px lightgrey;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  font-size: 14px;
  color: #3f3f3f;
}