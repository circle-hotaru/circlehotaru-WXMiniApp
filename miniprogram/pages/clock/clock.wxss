/* miniprogram/pages/clock/clock.wxss */
.preview {
  font-size: 20px;
  padding: 10px 20px;
  margin: 20px auto;
}

.color_section {
  width: 90%;
}

.color_wrapper {
  margin: 20px auto;
}
.color_title, .section_title {
  text-align: center;
  margin-bottom: 5px;
}

.color_options {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.color_option {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 0 0 20%;
}

.color_option_color {
  width: 30px;
  height: 30px;
}

.primary {
  margin: 40px auto;
}

.shadow {
  box-shadow: 2px 2px 1px 1px lightgrey;
}

.text_shadow {
  text-shadow: 2px 2px 1px lightgrey;
}

.bgm_section {
  width: 90%;
  margin: 10px auto;
}

.bgm_wrapper {
  display: flex;
  justify-content: space-between;

  width: 100%;
}